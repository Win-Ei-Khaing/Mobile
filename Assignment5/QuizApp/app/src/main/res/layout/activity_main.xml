<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="UselessParent"
    tools:context=".MainActivity">
    <TextView
        android:fontFamily="sans-serif-black"
        android:id="@+id/title"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@id/title"
        android:id="@+id/top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/question_num_one"
            android:text="@string/question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/question_one_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_q1_a"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:text="True"
                    android:layout_height="wrap_content"
                    android:onClick="onQ1RadioButtonClicked"/>
                <RadioButton
                    android:id="@+id/radio_q1_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="False"
                    android:onClick="onQ1RadioButtonClicked"/>
                <RadioButton
                    android:id="@+id/radio_q1_c"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:text="Not Sure"
                    android:layout_height="wrap_content"
                    android:onClick="onQ1RadioButtonClicked"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/top"
        android:id="@+id/middle"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/question_num_two"
            android:text="@string/question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <CheckBox
                    android:id="@+id/chk_q2_a"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:text="extends"
                    android:layout_height="wrap_content"
                    android:onClick="onQ2CheckBoxClicked"/>
                <CheckBox
                    android:id="@+id/chk_q2_b"
                    android:text="open"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onQ2CheckBoxClicked"/>
                <CheckBox
                    android:id="@+id/chk_q2_c"
                    android:text="inherit"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:onClick="onQ2CheckBoxClicked"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="reset"
            android:text="Reset"
            android:layout_marginEnd="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:onClick="submit"
            android:text="Submit"
            android:layout_marginStart="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>